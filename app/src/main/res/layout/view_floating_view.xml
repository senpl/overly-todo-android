<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/floating_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/floating_view_background"
        android:layout_width="@dimen/floating_view_size"
        android:layout_height="@dimen/floating_view_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/app_icon_rounded" />

    <ImageView
        android:id="@+id/floating_view_background_close"
        android:layout_width="@dimen/floating_view_size"
        android:layout_height="@dimen/floating_view_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/app_icon_rounded_close"
        android:alpha="0"/>

    <TextView
        android:id="@+id/floating_view_badge"
        android:layout_width="@dimen/floating_view_badge_size"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/floating_view_background"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        tools:text="1"
        android:background="@drawable/floating_view_badge"
        android:textColor="@color/floating_view_badge_text"
        android:gravity="center"
        android:visibility="invisible"
        tools:visibility="visible"/>
</RelativeLayout>